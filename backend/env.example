# AI Email Campaign Writer Backend - Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=AI Email Campaign Writer
APP_VERSION=1.0.0
DEBUG=true
API_V1_STR=/api/v1

# =============================================================================
# SECURITY
# =============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres_password@localhost:5432/ai_email_campaign
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password
POSTGRES_DB=ai_email_campaign
POSTGRES_PORT=5432

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=redis_password

# =============================================================================
# CORS
# =============================================================================
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_SSL=false

# SendGrid (Alternative to SMTP)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=your-email@yourdomain.com

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# FILE STORAGE
# =============================================================================
STORAGE_TYPE=local
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# AWS S3 Configuration (if using S3 storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# Cloudinary Configuration (if using Cloudinary storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# BACKGROUND TASKS
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# WEBSOCKET
# =============================================================================
WS_MESSAGE_QUEUE_URL=redis://localhost:6379/3

# =============================================================================
# EMAIL CAMPAIGN LIMITS
# =============================================================================
MAX_RECIPIENTS_PER_CAMPAIGN=10000
MAX_CAMPAIGNS_PER_USER=100
MAX_EMAILS_PER_DAY=50000

# =============================================================================
# AI GENERATION LIMITS
# =============================================================================
MAX_AI_REQUESTS_PER_HOUR=100
MAX_AI_REQUESTS_PER_DAY=1000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true for development, false for production
DEBUG=true

# =============================================================================
# TESTING
# =============================================================================
# Test database URL (for running tests)
TEST_DATABASE_URL=postgresql+asyncpg://postgres:postgres_password@localhost:5432/ai_email_campaign_test

# =============================================================================
# DEPLOYMENT
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Webhook URLs for external integrations
WEBHOOK_URL=your-webhook-url

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_AI_GENERATION=true
ENABLE_EMAIL_TRACKING=true
ENABLE_ANALYTICS=true
ENABLE_PAYMENTS=true
ENABLE_WEBHOOKS=true

# =============================================================================
# NOTIFICATIONS
# =============================================================================
# Email notifications
ADMIN_EMAIL=admin@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com

# =============================================================================
# CUSTOMIZATION
# =============================================================================
# Brand customization
BRAND_NAME=AI Email Campaign Writer
BRAND_LOGO_URL=https://yourdomain.com/logo.png
BRAND_COLOR=#3B82F6

# =============================================================================
# INTEGRATIONS
# =============================================================================
# Third-party integrations
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
# Backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# SECURITY HEADERS
# =============================================================================
# Security headers configuration
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true
ENABLE_CONTENT_TYPE_NOSNIFF=true
